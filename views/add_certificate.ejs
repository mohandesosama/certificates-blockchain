<%- include("_header") -%>
<h3>Add New Certificate</h3> 
<form  method="POST" action="/add">
    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="cert_owner">Certificate Owner Name: </label>
        <div class="col-sm-7">
        <input autofocus class="form-control" name="cert_owner" id="validationCustom03" required/>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="cert_name">Certificate Name: </label>
        <div class="col-sm-7">
        <input class="form-control" name="cert_name" id="validationCustom03" required />
        </div>
    </div>
    
    <div class="form-group row">
        <label class="col-form-label col-sm-2"></label>
        <div class="col-sm-10">
        <input type="submit" value="Submit" class="btn btn-default btn-success" />
        <a class="btn btn-outline-dark cancel" href="/">Cancel</a>
        </div>
    </div>
</form>
<%- include("_footer") -%>